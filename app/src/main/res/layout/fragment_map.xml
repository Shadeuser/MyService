<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sun_foreground"

        app:layout_constraintEnd_toStartOf="@id/btnFABLocation"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/btnFABLocation" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFABLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"

        android:src="@drawable/ic_man_foreground"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>